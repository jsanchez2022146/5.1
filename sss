#include <Keypad.h>

void display(int a, int b, int c, int d, int e, int f, int g){
  digitalWrite(10,a);
  digitalWrite(A0,b);
  digitalWrite(A1,c);
  digitalWrite(A2,d);
  digitalWrite(A3,e);
  digitalWrite(A4,f);
  digitalWrite(A5,g);
}

const byte Rows = 4; 
const byte Cols = 4; 

char rowscols[Rows][Cols] = {
  {'1', '2', '3', 'A'},
  {'4', '5', '6', 'B'},
  {'7', '8', '9', 'C'},
  {'*', '0', '#', 'D'}
};

byte rowPins[Rows] = {9, 8, 7, 6}; 
byte colPins[Cols] = {5, 4, 3, 2}; 

Keypad customKeypad = Keypad(makeKeymap(rowscols), rowPins, colPins, Rows, Cols); 

char digitos[1];
char mostrar;
byte i;


void setup(){
  Serial.begin(9600);
  for(i = 10; i<=10; i++)
  {
    pinMode(i,OUTPUT);
  }
  pinMode(A0,OUTPUT);
  pinMode(A1,OUTPUT);
  pinMode(A2,OUTPUT);
  pinMode(A3,OUTPUT);
  pinMode(A4,OUTPUT);
  pinMode(A5,OUTPUT); 
}
  
void loop(){
  
  mostrar = customKeypad.getKey();
  digitos[0] = mostrar;
  mostrarDisplay(digitos[0]);
  
   if (mostrar){
    Serial.println(mostrar);
  }
}


void mostrarDisplay(char numeroA){
  switch(numeroA){
    case '0':
        display(0,0,0,0,0,0,1);
    break;
    case '1':
        display(1,0,0,1,1,1,1);
    break;
    case '2':
        display(0,0,1,0,0,1,0);
    break;
    case '3':
        display(0,0,0,0,1,1,0);
    break;
    case '4':
        display(1,0,0,1,1,0,0);
    break;
    case '5':
        display(0,1,0,0,1,0,0);
    break;
    case '6':
        display(0,1,0,0,0,0,0);
    break;
    case '7':
        display(0,0,0,1,1,1,1);
    break;
    case '8':
        display(0,0,0,0,0,0,0);
    break;
    case '9':
        display(0,0,0,1,1,0,0);
    break;
    case 'A':
    	display(0,0,0,1,0,0,0);
    break;
    case 'B':
    	display(1,1,0,0,0,0,0);
    break;
    case 'C':
    	display(0,1,1,0,0,0,1);
    break;
    case 'D':
    	display(1,0,0,0,0,1,0);
    break;
     case '#':
    	display(0,1,1,0,0,0,1);
    break;
    case '*':
    	display(1,0,0,0,0,1,0);
    break;
    
  }
}
